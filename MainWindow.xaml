<Window x:Class="simplymusic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:simplymusic"
        mc:Ignorable="d"
        Height="1080" Width="1920">

    <!--TODO: Full screen thumbnails, hide side bars just transparent play button-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.Background>
                <LinearGradientBrush EndPoint="2,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF252424" Offset="0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Content="simply music." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="200"/>
        </Grid>

    </Grid>
</Window>
